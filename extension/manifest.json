{
  "name": "Nitro Project Manager",
  "version": "1.0",
  "description": "Leaderboard that tracks team progress through Basecamp",
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "HTML/leaderboard.html",
    "default_icon": {
      "16": "images/nitro_16.png",
      "32": "images/nitro_32.png",
      "48": "images/nitro_48.png",
      "128": "images/nitro_128.png"
    }
  },
  "icons": {
    "16": "images/nitro_16.png",
    "32": "images/nitro_32.png",
    "48": "images/nitro_48.png",
    "128": "images/nitro_128.png"
  },
  "manifest_version": 2
}